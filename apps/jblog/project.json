{
  "name": "jblog",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    },
    "@schematics/angular:application": {
      "strict": true
    }
  },
  "sourceRoot": "apps/jblog/src",
  "prefix": "jblog",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "options": {
        "outputPath": "dist/apps/jblog",
        "index": "apps/jblog/src/index.html",
        "main": "apps/jblog/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/jblog/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "stylePreprocessorOptions": {
          "includePaths": ["apps/jblog/src/theme"]
        },
        "assets": [
          "apps/jblog/src/favicon.ico",
          "apps/jblog/src/assets",
          {
            "glob": "**/*.css",
            "input": "node_modules/normalize.css/",
            "output": "assets/thirdparty/normalize/"
          },
          {
            "glob": "**/*.css",
            "input": "node_modules/@jbrowneuk/style-bundle",
            "output": "theme/"
          }
        ],
        "styles": ["apps/jblog/src/styles.scss"],
        "scripts": ["node_modules/marked/marked.min.js"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "600kb",
              "maximumError": "750kb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/jblog/src/environments/environment.ts",
              "with": "apps/jblog/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all",
          "optimization": {
            "scripts": true,
            "fonts": true,
            "styles": {
              "minify": true,
              "inlineCritical": false
            }
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "browserTarget": "jblog:build",
        "proxyConfig": "dev-proxy.json"
      },
      "configurations": {
        "production": {
          "browserTarget": "jblog:build:production"
        },
        "development": {
          "browserTarget": "jblog:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "jblog:build"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "main": "apps/jblog/src/test.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/jblog/tsconfig.spec.json",
        "karmaConfig": "apps/jblog/karma.conf.js",
        "inlineStyleLanguage": "scss",
        "stylePreprocessorOptions": {
          "includePaths": ["apps/jblog/src/theme"]
        },
        "assets": ["apps/jblog/src/favicon.ico", "apps/jblog/src/assets"],
        "styles": ["apps/jblog/src/styles.scss"],
        "scripts": []
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/jblog/**/*.ts", "apps/jblog/**/*.html"]
      }
    }
  }
}
